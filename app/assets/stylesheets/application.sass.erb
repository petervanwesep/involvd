@font-face
  font-family: 'edo_szregular'
  src: url('<%= asset_path 'edosz/edosz-webfont.eot' %>')
  src: url('<%= asset_path 'edosz/edosz-webfont.eot' %>' + '?#iefix') format('embedded-opentype'), url('<%= asset_path 'edosz/edosz-webfont.woff2' %>') format('woff2'), url('<%= asset_path 'edosz/edosz-webfont.woff' %>') format('woff'), url('<%= asset_path 'edosz/edosz-webfont.ttf' %>') format('truetype'), url('<%= asset_path 'edosz/edosz-webfont.svg' %>' + '#edo_szregular') format('svg')
  font-weight: normal
  font-style: normal

video
  position: absolute
  width: 100%
  bottom: -200px
  left: 0
  z-index: -1

body
  background-color: black
  color: white
  font-family: Times
  text-align: center

.header
  height: 50px

.give-back
  position: relative
  height: 500px

  #hero
    z-index: -1
    position: absolute
    right: 0
    left: 0
    top: 0
    bottom: 0
    overflow: hidden

  h1
    margin-bottom: 0px
    font-family: edo_szregular
    font-size: 120px
    padding-top: 56px

  p.caption
    margin-bottom: 15px
    font-size: 30px

  .sign-up-form
    #email-address
      margin-left: 25px
      width: 300px

    button#submit
      margin-left: 25px
      width: 100px

    .btn-default, a, #submit
      color: #878787

  .contact-vfo
    font-size: 16px
    margin-top: 30px

.footer
  color: white
  position: fixed
  bottom: 8px
  right: 12px

#content
  display: none
